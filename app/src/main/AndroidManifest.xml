    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainUIActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.text.TextViewActivity"></activity>
        <activity android:name=".activity.html.RichTextActivity"></activity>
        <activity android:name=".activity.html.WebViewActivity"></activity>
        <activity android:name=".activity.html.AdBlocksWebViewActivity"></activity>
    </application>

</manifest>